<?xml version="1.0" encoding="utf-8"?>
<at.photosniper.view.TTLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

    <include
        layout="@layout/bang_indicator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".7"/>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#ffb5b5b5"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tt="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:background="#ffefefef">

        <at.photosniper.widget.OngoingButton
            android:id="@+id/bangButton"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="bottom"
            tt:toggle="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:paddingTop="50dp">

            <TextView
                android:id="@+id/sensitivityBangText"
                style="@style/TTBangText"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:text="@string/sensitivity"/>

            <SeekBar
                android:id="@+id/bangSensitivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:progress="50"
                android:progressDrawable="@drawable/seek_bar_progress"
                android:secondaryProgress="0"
                android:thumb="@drawable/seek_arc_control_selector"/>
        </LinearLayout>

    </FrameLayout>

</at.photosniper.view.TTLinearLayout>